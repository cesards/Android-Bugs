<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dejavulabs.android.motionlayout.descriptor">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <application>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AndroidBugs.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MotionSceneCompoundViewActivity"
            android:label="@string/title_activity_motion_scene_compound_view"></activity>
        <activity
            android:name=".MotionSceneThroughXMLActivity"
            android:label="@string/title_activity_motion_scene_through_xmlactivity" />

    </application>
</manifest>
